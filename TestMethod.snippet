<?xml version="1.0" encoding="utf-8" ?> 
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
          <Title>Test Method</Title>
          <Description>Inserts a test method.</Description>
          <Author>Graeme</Author>
          <Shortcut>tstm</Shortcut>
          <SnippetTypes>
            <SnippetType>Expansion</SnippetType>
          </SnippetTypes>          
        </Header>
        <Snippet>
			<Declarations>
                <Literal>
                    <ID>category</ID>
                    <ToolTip>Category</ToolTip>
                    <Default>TestCategory</Default>
                </Literal>
                <Literal>
                    <ID>methodName</ID>
                    <ToolTip>Test method name</ToolTip>
                    <Default>MethodName</Default>
                </Literal>
                <Literal>
                    <ID>condition</ID>
                    <ToolTip>Conditions under which test is performed</ToolTip>
                    <Default>Condition</Default>
                </Literal>
                <Literal>
                    <ID>expected</ID>
                    <ToolTip>Expected behaviour</ToolTip>
                    <Default>Expected</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp" Kind="any">
                <![CDATA[
                  [Test]
				  [Category("$category$")]
				  public void $methodName$_Given$condition$_Should$expected$()
				  {
            // Arrange.
            
            // Act.
            
            // Assert.
				  }
				  
				  //-------------------------------------------------------------------------]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>